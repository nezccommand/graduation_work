<header class="bg-green-100 shadow-md fixed top-0 left-0 w-full z-50">
  <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
    <%= link_to root_path, class: "active:scale-98 flex items-center space-x-3 text-green-700 bg-transparent hover:bg-green-200 transition-colors rounded-md px-1 py-1" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 sm:h-10 sm:w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 2l8 4v6c0 5-3.58 9.74-8 12-4.42-2.26-8-7-8-12V6l8-4z" />
      </svg>

      <div class="whitespace-nowrap">
        <h1 class="text-sm sm:text-xl font-extrabold leading-tight">フィッシング詐欺学習室</h1>
        <p class="text-xs sm:text-xs font-medium tracking-wide">-それ、ホンモノですか？-</p>
      </div>
    <% end %>

    <div class="flex items-center justify-end space-x-4 w-full sm:w-auto mt-4">
      <% if user_signed_in? %>
        <span class="text-xs text-green-700 font-medium whitespace-nowrap sm:hidden">
          ログイン中
        </span>
        <span class="hidden sm:inline text-green-700 font-medium whitespace-nowrap">
          <%= current_user.name %>でログイン中
        </span>
      <% else %>
        <span class="text-xs text-green-700 font-medium whitespace-nowrap sm:hidden">
          未ログイン
        </span>
        <span class="hidden sm:inline text-green-700 font-medium whitespace-nowrap">
          ログインしていません
        </span>
      <% end %>
      <div class="relative flex items-center gap-2">
        <button
          id="menu-button"
          class="text-green-700 focus:outline-none p-1 sm:p-2 rounded-full transition hover:bg-green-200 active:scale-90"
          onclick="toggleMenu()"
        >
          <svg class="w-6 h-6 sm:w-8 sm:h-8" fill="none" stroke="currentColor" stroke-width="2"
              viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>

        <%= render "shared/dropdown_menu" %>

        <a href="/" aria-label="ホーム"
          class="bg-green-700 text-green-100 hover:bg-green-600 active:scale-95 rounded-full p-1 sm:p-2 shadow-md transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 9.75L12 4.5l9 5.25v9a1.5 1.5 0 01-1.5 1.5h-15A1.5 1.5 0 013 18.75v-9z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 19.5V12h6v7.5" />
          </svg>
        </a>
      </div>
  </div>
</header>