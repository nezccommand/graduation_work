<h2 class="text-2xl font-bold mb-6 text-green-700">登録済みクイズ一覧</h2>

  <div class="mb-6 text-center">
    <%= link_to "クイズを作成", new_admin_quiz_path, class: "inline-block bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded-lg transition" %>
  </div>

<div class="grid gap-6">
  <% @quizzes.each do |quiz| %>
    <div class="bg-white shadow-md rounded-lg p-6 hover:shadow-lg transition">
      <h3 class="text-lg font-semibold text-green-800 mb-2"><%= quiz.question %></h3>
      <p class="text-sm text-gray-600 mb-4"><%= truncate(quiz.explanation, length: 100) %></p>
      <%= link_to "詳細を見る", admin_quiz_path(quiz), class: "text-green-700 hover:underline text-sm" %>
    </div>
  <% end %>
</div>