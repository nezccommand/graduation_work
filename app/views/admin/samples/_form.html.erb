<div class="max-w-7xl mx-auto px-4">
  <div class="bg-white rounded-2xl shadow-lg p-6 sm:p-8">
    <%= form_with model: sample, url: sample.new_record? ? admin_samples_path : admin_sample_path(sample), local: true do |f| %>
      
      <div class="mb-6">
        <%= f.label :title, "用語名", class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.text_field :title, class: "border border-green-300 focus:border-green-500 focus:ring-green-300 rounded-md w-full px-3 py-2" %>
      </div>

      <div class="mb-6">
        <%= f.label :short_description, "短い説明", class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.text_field :short_description, class: "border border-green-300 focus:border-green-500 focus:ring-green-300 rounded-md w-full px-3 py-2" %>
      </div>

      <div class="mb-6">
        <%= f.label :description, "詳細な説明", class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.text_area :description, id: "description-textarea", class: "border border-green-300 focus:border-green-500 focus:ring-green-300 rounded-md w-full px-3 py-2" %>
      </div>

      <div class="mb-6">
        <%= f.label :sample_text, "文面サンプル", class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.text_area :sample_text, id: "sample-text-textarea", class: "border border-green-300 focus:border-green-500 focus:ring-green-300 rounded-md w-full px-3 py-2 font-mono" %>
      </div>

      <div class="mb-6">
        <label class="block text-gray-700 font-semibold mb-1">関連タグ</label>
        <%= hidden_field_tag "sample[tag_ids][]", "" %>
        <div class="flex flex-wrap gap-2">
          <% @tags.each do |tag| %>
            <div class="flex items-center">
              <%= f.check_box :tag_ids, { multiple: true, class: "mr-1" }, tag.id, nil %>
              <%= f.label :tag_ids, tag.name, value: tag.id, class: "text-gray-600" %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="mt-8 text-center">
        <%= f.submit sample.new_record? ? "用語を作成" : "用語を更新", class: "bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-6 rounded-lg transition" %>
      </div>
    <% end %>
  </div>
</div>
