<div class="max-w-7xl mx-auto px-4">
  <h2 class="text-2xl sm:text-4xl text-green-900 font-bold mb-6 text-center border-b border-green-300 pb-4">
    用語一覧
  </h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @words.each do |word| %>
      <div class="border border-gray-200 rounded-lg shadow-sm p-4 bg-white flex flex-col justify-between transform transition duration-200 hover:-translate-y-1 hover:shadow-lg">
        <div>
          <h3 class="text-center text-xl font-bold text-green-900 mb-2"><%= word.title %></h3>

          <p class="text-center text-gray-700 text-sm mb-4">
            <%= word.short_description %>
          </p>

          <% if word.sample_text.present? %>
            <pre class="bg-gray-100 p-4 rounded text-sm text-gray-800 overflow-auto font-mono whitespace-pre-wrap"><%= truncate(word.sample_text.lstrip, length: 100) %></pre>
          <% end %>
        </div>

        <div class="mt-auto text-center">
          <%= link_to "詳しく見る", word_path(word), class: "text-green-700 hover:underline text-sm font-semibold" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-8 flex justify-center">
    <%= paginate @words %>
  </div>
</div>