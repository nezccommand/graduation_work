<div class="max-w-7xl mx-auto px-4">
  <h2 class="text-2xl sm:text-4xl text-green-900 font-bold mb-6 text-center border-b border-green-300 pb-4">
    用語一覧
  </h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @words.each do |word| %>
      <div class="border border-gray-200 rounded-lg shadow-sm p-4 bg-white flex flex-col justify-between">
        <div>
          <div class="flex items-center space-x-3 mb-2">
            <% if word.icon_url.present? %>
              <img src="<%= asset_path(word.icon_url) %>" alt="アイコン" class="w-8 h-8">
            <% end %>
            <h3 class="text-xl font-bold text-green-900"><%= word.title %></h3>
          </div>

          <p class="text-gray-700 text-sm mb-4">
            <%= word.short_description %>
          </p>

          <% if word.sample_text.present? %>
            <div class="bg-gray-100 text-gray-600 text-xs p-2 rounded mb-2 font-mono whitespace-pre-wrap">
              <%= truncate(word.sample_text, length: 100) %>
            </div>
          <% end %>
        </div>

        <div class="mt-auto text-right">
          <%= link_to "詳しく見る", word_path(word), class: "text-green-700 hover:underline text-sm font-semibold" %>
        </div>
      </div>
    <% end %>
  </div>
</div>