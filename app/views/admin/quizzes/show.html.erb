<div class="max-w-7xl mx-auto px-4"><h2 class="text-2xl font-bold mb-6 text-green-700">クイズ詳細</h2>
  <div class="bg-white shadow-md rounded-lg p-6">
    <h3 class="text-xl font-semibold text-green-800 mb-4"><%= @quiz.question %></h3>

    <p class="mb-6 text-gray-700">
      <span class="font-semibold text-gray-900">解説：</span>
      <%= simple_format(@quiz.explanation) %>
    </p>
    <br>
    <p class="mb-3 text-gray-700">
      <span class="font-semibold text-gray-900">ジャンル：</span>
      <%= simple_format(@quiz.genre) %>
    </p>
    <br>
    <h4 class="text-lg font-bold mb-3 text-green-700">選択肢</h4>
    <ul class="space-y-2">
      <% @quiz.choices.each do |choice| %>
        <li class="p-3 rounded border <%= choice.is_correct ? 'border-green-500 bg-green-50' : 'border-gray-300' %>">
          <span class="font-medium"><%= choice.content %></span>
          <% if choice.is_correct %>
            <span class="ml-2 text-sm text-green-700 font-semibold">（正解）</span>
          <% end %>
        </li>
      <% end %>
    </ul>

    <div class="mt-6 flex space-x-4">
      <%= link_to "← 一覧に戻る", admin_quizzes_path, class: "text-green-600 hover:underline" %>
      <%= link_to "編集", edit_admin_quiz_path(@quiz), class: "text-blue-600 hover:underline" %>
      <%= link_to "削除", admin_quiz_path(@quiz), data: { turbo_method: :delete, turbo_confirm: "本当に削除してよろしいですか？" }, class: "text-red-600 hover:underline" %>
    </div>
  </div>
</div>