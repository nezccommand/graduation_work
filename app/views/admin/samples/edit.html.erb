<div class="max-w-7xl mx-auto px-4">
  <h2 class="text-2xl sm:text-3xl font-bold text-green-700 mb-6 border-b-2 border-green-200 pb-2">用語を編集</h2>
  <%= render 'form', sample: @sample %>
</div>

<% if @errors.present? %>
  <div class="bg-red-100 text-red-700 p-4 mb-4 rounded">
    <strong>更新に失敗しました:</strong>
    <ul>
      <% @errors.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<% if @debug_params.present? %>
  <div class="bg-yellow-100 text-yellow-800 p-2 mb-4 rounded">
    <strong>送信されたパラメータ（デバッグ）:</strong><br>
    <%= @debug_params %>
  </div>
<% end %>