<div class="pt-32 max-w-3xl mx-auto px-4">
  <h2 class="text-2xl sm:text-3xl font-bold text-green-700 mb-6 border-b-2 border-green-200 pb-2">クイズ編集</h2>

  <div class="bg-white rounded-2xl shadow-lg p-6 sm:p-8">
    <%= form_with model: @quiz, url: admin_quiz_path(@quiz), local: true, method: :patch do |f| %>
      <div class="mb-6">
        <%= f.label :question, "問題文", class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.text_field :question, class: "border border-green-300 focus:border-green-500 focus:ring-green-300 rounded-md w-full px-3 py-2" %>
      </div>

      <div class="mb-6">
        <%= f.label :explanation, "解説", class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.text_area :explanation, class: "border border-green-300 focus:border-green-500 focus:ring-green-300 rounded-md w-full px-3 py-2" %>
      </div>

      <h3 class="text-lg font-semibold text-green-700 mb-4">選択肢</h3>
      <div class="space-y-6">
        <%= f.fields_for :choices do |c| %>
          <div class="border border-gray-200 rounded-lg p-4 bg-gray-50">
            <div class="mb-3">
              <%= c.label :content, "選択肢内容", class: "block text-sm font-medium text-gray-600 mb-1" %>
              <%= c.text_field :content, class: "border border-gray-300 rounded-md w-full px-3 py-2" %>
            </div>

            <div class="flex items-center space-x-2 mb-2">
              <%= c.check_box :is_correct, class: "text-green-600" %>
              <%= c.label :is_correct, "この選択肢を正解にする", class: "text-sm text-gray-700" %>
            </div>

            <%= c.hidden_field :id %>
            <div class="flex items-center space-x-2">
              <%= c.check_box :_destroy, class: "text-red-500" %>
              <%= c.label :_destroy, "この選択肢を削除", class: "text-sm text-red-500" %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="mt-8 flex justify-center gap-4">
        <%= f.submit "クイズを更新", class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg transition" %>
        <%= link_to "キャンセル", admin_quiz_path(@quiz), class: "text-gray-600 hover:underline py-2 px-4" %>
      </div>
    <% end %>
  </div>
</div>
