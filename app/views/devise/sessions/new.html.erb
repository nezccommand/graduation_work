<div class="font-sans max-w-7xl mx-auto px-4">
  <section class="bg-green-50 py-12 px-4 sm:px-8 rounded-xl flex justify-center">
    <div class="bg-white w-full max-w-md rounded-xl shadow-lg p-8">
      <h2 class="text-green-900 text-2xl sm:text-3xl font-bold mb-6 text-center border-b border-green-300 pb-2">
        <%= t('devise.sessions.new.title', default: "ログイン") %>
      </h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <% if flash[:alert] %>
          <div class="mb-4 p-4 bg-red-100 border border-red-300 text-red-700 rounded-md">
            <%= flash[:alert] %>
          </div>
        <% end %>

        <%= f.email_field :email,
          placeholder: "メールアドレス",
          autofocus: true,
          autocomplete: "email",
          class: "mt-4 block w-full bg-white h-12 px-4 py-2.5 rounded-md border border-gray-300 shadow-sm
                  focus:ring-2 focus:ring-green-200 focus:border-green-400 focus:outline-none transition duration-150 ease-in-out" %>

        <%= f.password_field :password,
          placeholder: "パスワード(8文字以上)",
          autocomplete: "current-password",
          class: "mt-4 block w-full bg-white h-12 px-4 py-2.5 rounded-md border border-gray-300 shadow-sm
                  focus:ring-2 focus:ring-green-200 focus:border-green-400 focus:outline-none transition duration-150 ease-in-out" %>

        <% if devise_mapping.rememberable? %>
          <div class="mt-4 flex items-center">
            <%= f.check_box :remember_me, class: "mr-2" %>
            <%= f.label :remember_me, class: "text-sm text-gray-700" %>
          </div>
        <% end %>

        <div class="active:scale-95 mt-6 flex justify-center">
          <%= f.submit t("devise.sessions.new.submit", default: "ログイン"), class: "inline-flex items-center px-6 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
        </div>
      <% end %>

      <div class="mt-6 flex justify-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </section>
</div>
